<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo2">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@android:color/black"
        android:text="TwÃ³j wynik:"
        android:gravity="center"
        android:textSize="30dp"
        android:id="@+id/wynikTekst"
        android:layout_marginTop="20dp"/>
    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/stop"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/ustawienia"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@android:color/black"
        android:layout_below="@id/wynikTekst"
        android:textSize="30dp"
        android:gravity="center"
        android:id="@+id/wynikPole"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/wynikPole"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Rozpocznij ponownie"
        android:id="@+id/buttonRozpocznijPonownie"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/zamkniecie"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/zamkniecie"/>

</RelativeLayout>